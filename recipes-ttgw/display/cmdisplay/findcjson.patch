@@ -0,0 +1,33 @@
+# Yocto-compatible FindcJSON module
+# Dynamically locates cJSON library and headers from Yocto sysroot
+
+message(STATUS ">>> Searching for cJSON in sysroot: ${CMAKE_SYSROOT}")
+
+# Find include directory
+find_path(CJSON_INCLUDE_DIR cjson/cJSON.h
+    PATHS ${CMAKE_SYSROOT}/usr/include
+)
+
+# Find library
+find_library(CJSON_LIBRARIES cjson
+    PATHS ${CMAKE_SYSROOT}/usr/lib ${CMAKE_SYSROOT}/usr/lib64
+)
+
+# Handle results
+include(FindPackageHandleStandardArgs)
+find_package_handle_standard_args(cJSON DEFAULT_MSG CJSON_LIBRARIES CJSON_INCLUDE_DIR)
+
+mark_as_advanced(CJSON_LIBRARIES CJSON_INCLUDE_DIR)
+
+if (CJSON_LIBRARIES AND CJSON_INCLUDE_DIR)
+    message(STATUS "✅ Found cJSON:")
+    message(STATUS "   Include dir: ${CJSON_INCLUDE_DIR}")
+    message(STATUS "   Library: ${CJSON_LIBRARIES}")
+else()
+    message(WARNING "⚠️  cJSON not found in ${CMAKE_SYSROOT}/usr/lib or /usr/include.")
+    message(WARNING "   Please ensure the cjson package is listed in DEPENDS of your recipe.")
+endif()
+
+# Export variables for use
+set(CJSON_FOUND TRUE)
+

